# Backend Configuration
PORT=8000
HOST=0.0.0.0

# CORS Settings (для production укажите конкретные домены)
ALLOWED_ORIGINS=*

# Telegram Bot Token (для функции "Download to Chat")
BOT_TOKEN=your_telegram_bot_token_here

# Genius API Token (для получения текстов песен)
GENIUS_API_TOKEN=your_genius_api_token_here

# Tribute.tg Payment Gateway
TRIBUTE_API_KEY=your_tribute_api_key_here
TRIBUTE_LINK_MONTH=https://tribute.tg/pay/your_link_month
TRIBUTE_LINK_YEAR=https://tribute.tg/pay/your_link_year

# Proxy servers for Hitmo requests (comma-separated)
# Format: http://ip:port or http://user:pass@ip:port
# Leave empty to disable proxy rotation
PROXY_LIST=

# Examples:
# PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080
# PROXY_LIST=http://user:pass@proxy1.com:8080,http://user:pass@proxy2.com:8080

# TON Payment Configuration
TON_WALLET_ADDRESS=your_ton_wallet_address_here
TON_API_URL=https://testnet.tonapi.io
TON_API_KEY=
